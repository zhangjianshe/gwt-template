<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: grid;
            grid-template-columns: 280px 1fr 160px 40px;
            align-items: center;
            justify-content: space-between;
            gap: 1rem;
            padding: 0 10px;
        }

        .btn {
            color: whitesmoke;
            width: 40px;
            height: 40px;
            justify-content: center;
            justify-items: center;
            align-items: center;
            display: flex;
            border-radius: 5px;
        }

        .btn:HOVER {
            background-color: rgba(0, 0, 0, 0.5);
        }

        .exit {
            color: whitesmoke;
            height: 40px;
            justify-content: center;
            justify-items: center;
            align-items: center;
            display: flex;
            border-radius: 5px;
            padding: 0 15px;
        }

        .exit:hover {
            background-color: rgba(0, 0, 0, 0.5);
        }

        .logo {
            overflow: hidden;
            object-fit: contain;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.box}">
        <g:Image ui:field="logo" addStyleNames="{style.logo}"/>
        <g:HTMLPanel>
            <g:HorizontalPanel ui:field="buttons" verticalAlignment="middle">
            </g:HorizontalPanel>
        </g:HTMLPanel>
        <g:Label ui:field="lbExit" addStyleNames="{style.exit}"/>
        <widget:FontIcon color="white" addStyleNames="{style.btn}" ui:field="btnPreference"/>
    </g:HTMLPanel>
</ui:UiBinder>