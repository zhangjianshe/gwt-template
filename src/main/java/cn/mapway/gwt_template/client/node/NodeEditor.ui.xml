<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog"
             xmlns:widget="urn:import:cn.mapway.ui.client.widget"
             xmlns:key="urn:import:cn.mapway.gwt_template.client.preference.key">
    <ui:style>
        .lb {
            width: 150px;
            font-weight: bold;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:south size="68">
            <dialog:SaveBar ui:field="saveBar"/>
        </g:south>
        <g:center>
            <g:HTMLPanel addStyleNames="ai-panel-contetn">
                <g:HorizontalPanel spacing="10">
                    <g:Label addStyleNames="{style.lb}">名称</g:Label>
                    <widget:AiTextBox ui:field="txtName"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel spacing="10">
                    <g:Label addStyleNames="{style.lb}">IP:PORT</g:Label>
                    <widget:AiTextBox ui:field="txtIp"/>
                    <widget:AiTextBox width="90" ui:field="txtPort"/>
                    <widget:AiTextBox width="100" placeholder="不用填写" ui:field="txtSshUser"/>
                </g:HorizontalPanel>

                <g:HorizontalPanel spacing="10">
                    <g:Label addStyleNames="{style.lb}">Access Key</g:Label>
                    <key:KeyList ui:field="keyList"/>
                </g:HorizontalPanel>

            </g:HTMLPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>