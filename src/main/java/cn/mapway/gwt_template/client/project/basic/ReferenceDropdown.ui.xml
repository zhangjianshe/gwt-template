<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        @eval BORDER_COLOR "var(--color-border)";
        @eval BORDER_RADIUS "var(--border-radius)";
        .box {
            display: inline-grid;
            grid-template-columns: 34px 1fr 24px;
            border-radius: BORDER_RADIUS;
            border: solid 1px BORDER_COLOR;
            height: 34px;
            align-items: center;
            padding: 0 4px;
            min-width: 160px;
        }

        .box:HOVER {
            background-color: #f0f0f0;
        }

        .center {
            justify-self: center;
        }</ui:style>
    <g:HTMLPanel addStyleNames="{style.box}">
        <widget:FontIcon ui:field="fontKind" addStyleNames="{style.center}"/>
        <g:Label ui:field="lbName"/>
        <widget:FontIcon ui:field="drop"/>
    </g:HTMLPanel>
</ui:UiBinder>