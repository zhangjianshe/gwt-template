<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget"
             xmlns:buttons="urn:import:cn.mapway.ui.client.widget.buttons"
>

    <ui:style type="cn.mapway.gwt_template.client.project.webhook.WebHookItem.SStyle">
        .itemRow {
            display: grid;
            grid-template-columns: 1fr 2fr 2fr 1fr;
            padding: 10px;
            border-bottom: 1px solid #eee;
            transition: background 0.2s;
            cursor: pointer;
        }

        .itemRow:hover {
            background-color: #f0f0f0;
        }


        .count {
            color: #888;
            font-size: 12px;
            margin: 0 15px;
        }

        .active {
            color: #4caf50;
        }

        .inactive {
            color: #9e9e9e;
        }

        .ind {
            margin-right: 10px;
            font-size: 36px;
        }

        .m6 {
            margin-left: 6px;
        }</ui:style>

    <g:HTMLPanel styleName="{style.itemRow}">
        <g:VerticalPanel horizontalAlignment="center">
            <g:Label ui:field="lblStatus" addStyleNames="{style.ind}" text="●"/>
            <buttons:AiButton type="second" ui:field="btnRunning"/>
        </g:VerticalPanel>
        <g:VerticalPanel>
            <g:HorizontalPanel>
                <g:Label ui:field="lblEvents" styleName="ai-code"/>
                <g:Label styleName="ai-code {style.m6}">ON</g:Label>
            </g:HorizontalPanel>
            <widget:Header ui:field="lblFilter" styleName="ai-code"/>
        </g:VerticalPanel>
        <g:VerticalPanel>
            <g:HorizontalPanel>
                <g:Label ui:field="lblMethod" styleName="ai-code"/>
                <g:Label styleName="ai-code {style.m6}">TO</g:Label>
            </g:HorizontalPanel>
            <widget:Header ui:field="lblUrl" styleName="ai-code"/>
        </g:VerticalPanel>
        <g:VerticalPanel spacing="5" horizontalAlignment="right">
            <buttons:AiButton ui:field="btnEdit" addStyleNames="ai-small">编辑</buttons:AiButton>
            <buttons:AiButton ui:field="btnDelete" addStyleNames="ai-small">删除</buttons:AiButton>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>