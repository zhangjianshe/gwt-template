<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        @eval BORDER_COLOR "var(--color-border)";
        @eval BORDER_RADIUS "var(--border-radius)";
        .box {
            display: inline-grid;
            grid-template-columns: 34px 1fr 24px;
            border-radius: BORDER_RADIUS;
            border: solid 1px BORDER_COLOR;
            height: 34px;
            align-items: center;
            padding: 0 4px;
            min-width: 120px;
            background-color: #1f883d;
            color: white;
            font-weight: bold;
        }

        .box:HOVER {
            background-color: darkolivegreen;
        }

        .center {
            justify-self: center;
        }

        .name {
            font-weight: bold;
            color: white;
        }</ui:style>
    <g:HTMLPanel addStyleNames="{style.box}">
        <widget:FontIcon ui:field="fontKind" color="white" addStyleNames="{style.center}"/>
        <g:Label ui:field="lbName" addStyleNames="{style.name}"/>
        <widget:FontIcon ui:field="drop" color="white"/>
    </g:HTMLPanel>
</ui:UiBinder>