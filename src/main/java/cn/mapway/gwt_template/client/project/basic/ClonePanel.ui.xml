<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget0="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: grid;
            align-items: center;
            grid-template-columns: 1fr;
            justify-content: space-between;
        }

        .msg {
            color: #666;
            line-height: 150%;
            padding: 0 10px;
            font-size: 0.9rem;
        }

        .box2 {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }</ui:style>
    <g:TabLayoutPanel ui:field="tab" barHeight="50">
        <g:tab>
            <g:header>HTTPS</g:header>
            <g:HTMLPanel addStyleNames="{style.box}">
                <g:HorizontalPanel spacing="10" verticalAlignment="middle" width="100%">
                    <widget0:AiTextBox width="100%" ui:field="txtHttp" enabled="false"/>
                    <g:cell width="40px" horizontalAlignment="center">
                        <widget0:FontIcon pushButton="true" addStyleNames="ai-tool-btn" ui:field="btnCopyHttp"/>
                    </g:cell>
                </g:HorizontalPanel>
                <g:HTMLPanel addStyleNames="{style.box2}">
                    <g:Label addStyleNames="{style.msg}">使用Web Http协议克隆</g:Label>
                    <g:Label addStyleNames="{style.msg}" ui:field="lbMessage"/>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:tab>
        <g:tab>
            <g:header>SSH</g:header>
            <g:HTMLPanel addStyleNames="{style.box}">
                <g:HorizontalPanel spacing="10" verticalAlignment="middle" width="100%">
                    <widget0:AiTextBox width="100%" ui:field="txtSSH" enabled="false"/>
                    <g:cell width="40px" horizontalAlignment="center">
                        <widget0:FontIcon pushButton="true" addStyleNames="ai-tool-btn" ui:field="btnCopySSH"/>
                    </g:cell>
                </g:HorizontalPanel>
                <g:HTMLPanel addStyleNames="{style.box2}">
                    <g:Label addStyleNames="{style.msg}">使用SSH协议克隆</g:Label>
                    <g:Label addStyleNames="{style.msg}" ui:field="lbMessage2"/>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:tab>
    </g:TabLayoutPanel>
</ui:UiBinder>