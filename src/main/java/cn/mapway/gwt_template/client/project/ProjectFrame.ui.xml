<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:project="urn:import:cn.mapway.gwt_template.client.project"
             xmlns:widget="urn:import:cn.mapway.gwt_template.client.widget">
    <ui:style>
        .top {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
        }

        .left {
            background-color: whitesmoke;
        }

        .content {
            padding: 10px;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:west size="350">
            <g:DockLayoutPanel addStyleNames="{style.left}">
                <g:north size="50">
                    <g:HTMLPanel addStyleNames="{style.top}">
                        <widget:Head>我参与的项目</widget:Head>
                        <g:Button ui:field="btnCreate">创建项目</g:Button>
                    </g:HTMLPanel>
                </g:north>
                <g:center>
                    <g:ScrollPanel addStyleNames="{style.left} {style.content}">
                        <project:ProjectList width="100%" ui:field="projectTree"/>
                    </g:ScrollPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:west>
        <g:center>
            <project:ProjectView ui:field="projectPanel"/>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>