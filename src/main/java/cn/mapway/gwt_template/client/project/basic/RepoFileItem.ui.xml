<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: grid;
            /* Icon | Name | Summary | Size | Date */
            grid-template-columns: 32px 220px 1fr 100px 120px;
            height: 40px;
            align-items: center;
            border-bottom: 1px solid #eee;
        }

        .box:HOVER {
            background-color: #f0f0f0;
        }

        .right {
            justify-self: flex-end;
            color: #444;
        }

        .icon {
            font-size: 22px;
        }

        .name {
            font-size: 1rem;
            cursor: pointer;
            font-family: sans-serif;
        }

        .name:HOVER {
            text-decoration: underline;
        }

        .summary {
            color: #666;
            font-size: 0.9rem;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis; /* The "..." effect */
            padding: 0 10px;
        }



    </ui:style>
    <g:HTMLPanel addStyleNames="{style.box}">
        <widget:FontIcon ui:field="icon" addStyleNames="{style.icon}"/>
        <widget:AiLabel addStyleNames="{style.name}" ui:field="lbName"/>
        <g:Label ui:field="lbSummary" addStyleNames="{style.summary}"/>
        <g:Label ui:field="lbSize" addStyleNames="{style.right}"/>
        <g:Label ui:field="lbDate" addStyleNames="{style.right}"/>
    </g:HTMLPanel>
</ui:UiBinder>