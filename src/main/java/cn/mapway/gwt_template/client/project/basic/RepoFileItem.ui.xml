<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: grid;
            grid-template-columns: 32px 1fr 1fr 100px;
            height: 40px;
            padding: 0 8px;
            align-items: center;
            border-bottom: solid 1px #e0e0e0;
        }

        .box:HOVER {
            background-color: #f0f0f0;
        }

        .right {
            justify-self: flex-end;
        }

        .icon {
            font-size: 22px;
        }</ui:style>
    <g:HTMLPanel addStyleNames="{style.box}">
        <widget:FontIcon ui:field="icon" addStyleNames="{style.icon}"/>
        <g:Label ui:field="lbName"/>
        <g:Label ui:field="lbSummary"/>
        <g:Label ui:field="lbDate" addStyleNames="{style.right}"/>
    </g:HTMLPanel>
</ui:UiBinder>