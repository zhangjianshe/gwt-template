<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 4px 4px 4px 6px;
        }

        .box:HOVER {
            background-color: #f0f0f0;
        }

        .check {
            padding: 4px;
            width: 24px;
            height: 24px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.box}">
        <g:Label ui:field="lbName"/>
        <g:HorizontalPanel verticalAlignment="middle" spacing="2">
            <g:CheckBox ui:field="checkAdmin" addStyleNames="{style.check}"/>
            <g:CheckBox ui:field="checkRead" addStyleNames="{style.check}"/>
            <g:CheckBox ui:field="checkWrite" addStyleNames="{style.check}"/>
            <widget:FontIcon pushButton="true" ui:field="btnRemove" addStyleNames="ai-tool-btn {style.check}"/>
        </g:HorizontalPanel>
    </g:HTMLPanel>
</ui:UiBinder>