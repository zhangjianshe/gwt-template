<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:ace="urn:import:cn.mapway.ace.client"
             xmlns:basic="urn:import:cn.mapway.gwt_template.client.project.basic"
             xmlns:widget="urn:import:cn.mapway.gwt_template.client.widget">
    <ui:style type="cn.mapway.gwt_template.client.project.basic.ProjectCodeFrame.SStyle">
        .box {
            display: grid;
            align-items: center;
            justify-items: flex-start;
            grid-template-columns: 1fr 100px;
            padding: 0 10px;
            border-bottom: solid 1px #e0e0e0;
            border-left: solid 1px #e0e0e0;
            border-right: solid 1px #e0e0e0;
            height: 50px;
            margin: 0 10px;
        }

        .box1 {
            display: grid;
            align-items: center;
            justify-items: flex-start;
            grid-template-columns: 1fr 300px;
            padding: 0 10px;

        }

        .link {
            cursor: pointer;
        }

        .link:HOVER {
            text-decoration: underline;
        }

        .imagePreview {
            display: block;
            margin: 20px auto;
            max-width: 90%;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border: 5px solid white;
        }

        .box2 {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 10px;
            background-color: #f0f0f0;
            border-radius: 6px 6px 0 0;
            border-top: solid 1px #e0e0e0;
            border-left: solid 1px #e0e0e0;
            border-right: solid 1px #e0e0e0;
            margin: 0 10px;
            height: 50px;
        }

        .msg {
            color: #666;
        }

        .files {
            border-radius: 0 0 6px 6px;
            border-bottom: solid 1px #e0e0e0;
            border-left: solid 1px #e0e0e0;
            border-right: solid 1px #e0e0e0;
            margin: 0 4px 10px 10px;
        }

        .scroll {
            scrollbar-gutter: stable;
            overflow-y: scroll;
        }

        .msgPanel {
            padding: 15px;
            line-height: 200%;
        }
    </ui:style>
    <g:DockLayoutPanel ui:field="root">
        <g:east size="400">
            <g:HTMLPanel/>
        </g:east>
        <g:north size="60">
            <g:HTMLPanel ui:field="opBar" addStyleNames="{style.box1}">
                <g:HorizontalPanel verticalAlignment="middle" spacing="6">
                    <basic:ReferenceDropdown ui:field="ddlRef"/>
                    <widget:IconButton ui:field="btnBranch"/>
                    <widget:IconButton ui:field="btnTag"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel width="100%" horizontalAlignment="right" spacing="6">
                    <basic:CloneButton ui:field="btnClone"/>
                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:north>
        <g:north size="50">
            <g:HTMLPanel ui:field="infoBar">
                <g:HTMLPanel addStyleNames="{style.box2}">
                    <g:HorizontalPanel verticalAlignment="middle" spacing="6">
                        <widget:Head ui:field="dirLastUser"/>
                        <g:Label addStyleNames="{style.msg}" ui:field="dirLastSummary"/>
                    </g:HorizontalPanel>
                    <g:HorizontalPanel width="100%" horizontalAlignment="right" spacing="6">
                        <g:Label addStyleNames="{style.msg}" ui:field="dirLastModify"/>
                    </g:HorizontalPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:north>
        <g:north size="50">
            <g:HTMLPanel ui:field="pathBar" addStyleNames="{style.box}">
                <g:HorizontalPanel ui:field="paths" spacing="4" verticalAlignment="middle">
                </g:HorizontalPanel>
                <g:HorizontalPanel>

                </g:HorizontalPanel>
            </g:HTMLPanel>
        </g:north>
        <g:center>
            <g:LayoutPanel ui:field="contentPanel">
                <g:layer>
                    <g:ScrollPanel ui:field="fileContainer" addStyleNames="{style.scroll}">
                        <g:HTMLPanel ui:field="files" addStyleNames="{style.files}">

                        </g:HTMLPanel>
                    </g:ScrollPanel>
                </g:layer>
                <g:layer>
                    <ace:AceEditor ui:field="editor"/>
                </g:layer>
                <g:layer>
                    <g:ScrollPanel ui:field="messagePanel">
                        <g:HTMLPanel ui:field="msgContainer" addStyleNames="{style.msgPanel}">

                        </g:HTMLPanel>
                    </g:ScrollPanel>
                </g:layer>
            </g:LayoutPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>