<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:widget="urn:import:cn.mapway.ui.client.widget">
    <ui:style>
        .box {
            display: inline-grid;
            padding: 0 10px;
            align-items: center;
            grid-template-columns: 24px 1fr;
            border-radius: 6px;
            height: 33px;
        }

        .box:HOVER {
            background-color: #f0f0f0;
        }


        .lb {
            font-size: 1rem;
        }

        .outbox {
            border-bottom: solid 2px transparent;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .outbox[select="true"] {
            border-bottom: solid 2px darkgreen;
        }

        .outbox[select="true"] .lb {
            font-weight: bold;
        }


    </ui:style>
    <g:HTMLPanel addStyleNames="{style.outbox}">
        <g:HTMLPanel addStyleNames="{style.box}">
            <widget:FontIcon ui:field="icon"/>
            <g:Label ui:field="lbName" addStyleNames="{style.lb}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>