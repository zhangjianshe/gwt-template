<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog"
             xmlns:widget="urn:import:cn.mapway.gwt_template.client.widget">
    <ui:style>
        .box {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            gap: 1rem;
            margin: 10px 0;
        }

        .left {
            width: 130px;
            font-weight: bold;
        }

        .box0 {
            padding: 10px;

        }</ui:style>
    <g:DockLayoutPanel>
        <g:south size="68">
            <dialog:SaveBar ui:field="saveBar"/>
        </g:south>
        <g:center>
            <g:HTMLPanel addStyleNames="{style.box0}">
                <g:HTMLPanel addStyleNames="{style.box}">
                    <g:Label addStyleNames="{style.left}">名称</g:Label>
                    <widget:TextBox ui:field="txtName"/>
                </g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.box}">
                    <g:Label addStyleNames="{style.left}">说明</g:Label>
                    <widget:TextBox ui:field="txtSummary"/>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>