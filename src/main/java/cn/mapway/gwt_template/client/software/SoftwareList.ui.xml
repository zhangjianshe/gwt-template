<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style type="cn.mapway.gwt_template.client.software.SoftwareList.SStyle">
        .box {
            padding: 10px;
        }

        .name {
            font-weight: bold;
        }

        .summary {
            color: #a0a0a0;
        }

        .key {
            user-select: auto;
            border-radius: 4px;
            border: solid 1px #e0e0e0;
            background: #f0f0f0;
            padding: 5px 10px;
        }

        .list {

        }

        .lh {
            line-height: 36px;
        }

        .row {
            height: 36px;
        }

        .row:hover {
            background-color: #f0f0f0;
        }

        .label {
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 4px;
            border: solid 1px #e0e0e0;
            background-color: #f0f0f0;
            padding: 4px 12px;
            display: inline-block;
            margin: 8px 0;
        }
    </ui:style>
    <g:ScrollPanel>
        <g:HTMLPanel addStyleNames="{style.box}">
            <g:HorizontalPanel verticalAlignment="middle" spacing="10">
                <g:Image ui:field="icon" width="46px" height="46px"/>
                <g:VerticalPanel spacing="4">
                    <g:Label ui:field="lbName" addStyleNames="{style.name}"/>
                    <g:Label ui:field="lbSummary" addStyleNames="{style.summary}"/>
                    <g:Label ui:field="lbKey" styleName="{style.key}"/>
                </g:VerticalPanel>
            </g:HorizontalPanel>
            <g:FlexTable cellSpacing="0" cellPadding="6" ui:field="list" addStyleNames="{style.list}">

            </g:FlexTable>
        </g:HTMLPanel>
    </g:ScrollPanel>
</ui:UiBinder>