<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dialog="urn:import:cn.mapway.ui.client.widget.dialog"
             xmlns:widget1="urn:import:cn.mapway.gwt_template.client.widget"
             xmlns:widget="urn:import:cn.mapway.ui.client.widget"
             xmlns:client="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
        .box {
            display: grid;
            grid-template-columns: 140px 1fr;
            gap: 1rem;
            align-items: center;
            justify-content: flex-start;
            padding: 20px;
        }
    </ui:style>
    <g:DockLayoutPanel>
        <g:south size="68">
            <dialog:SaveBar saveText="保存" ui:field="saveBar"/>
        </g:south>
        <g:center>
            <g:HTMLPanel>
                <g:HTMLPanel addStyleNames="{style.box}">
                    <widget1:Head>公钥名称</widget1:Head>
                    <widget:AiTextBox ui:field="txtName"/>
                    <widget1:Head>公钥</widget1:Head>
                    <g:TextArea addStyleNames="ai-textarea" height="120px" ui:field="txtKey"/>
                    <widget1:Head>有效期</widget1:Head>
                    <g:HorizontalPanel>
                        <client:DateBox addStyleNames="ai-input" ui:field="dateExpire"/>
                        <g:Button ui:field="btnRemoveExpire">不设有效期</g:Button>
                    </g:HorizontalPanel>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>