<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .h {
            font-weight: bold;
            text-align: right;
        }
    </ui:style>
    <g:HorizontalPanel spacing="4" verticalAlignment="middle">
        <g:Label width="60px" addStyleNames="{style.h}">名称</g:Label>
        <g:TextBox ui:field="txtName" styleName="ai-input" width="200px"/>
        <g:Label width="60px" addStyleNames="{style.h}">ZoneId</g:Label>
        <g:TextBox ui:field="txtZoneId" styleName="ai-input" width="200px"/>
        <g:Label width="100px" addStyleNames="{style.h}">AccessToken</g:Label>
        <g:TextBox ui:field="txtToken" styleName="ai-input" width="200px"/>
        <g:Label width="100px" addStyleNames="{style.h}">prefix</g:Label>
        <g:TextBox ui:field="txtSuffix" styleName="ai-input" width="200px"/>
    </g:HorizontalPanel>
</ui:UiBinder>